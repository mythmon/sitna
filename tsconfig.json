{
  "compilerOptions": {
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "sitna/*": [
        "./*"
      ]
    },
    "target": "ES2017",
    "module": "ES2015",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
}
